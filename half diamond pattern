import java.io.*;
import java.util.*;
public class HalfDiamondPattern {
    public static void main(String[] args) {
        int n = 5;  

        // Upper part of the half-diamond
        for (int i = 1; i <= n; i++) { 
            for (int j = 1; j <= i; j++) { 
                System.out.print("*");
            }
            System.out.println();
        }

        // Lower part of the half-diamond
        for (int i = n - 1; i >= 1; i--) { 
            for (int j = 1; j <= i; j++) { 
                System.out.print("*");
            }
            System.out.println(); 
        }
    }
}
